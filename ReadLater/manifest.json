{
   "background": {
      "scripts": ["js/background.js"]
   },
   "browser_action": {
      "default_icon": {
         "128": "icon/icons8-reading-100.png"

      },
      "default_popup": "html/popup.html",
      "default_title": "Show articles"
   },
   "commands":{
      "save-this-tab":{
         "suggested_key":{
            "default":"Ctrl+B"
         },
         "description":"Save current tab"
      }
   },
   "default_locale": "en",
   "description": "procrastinate your reading process :)",
   "icons": {

      "128": "icon/icons8-reading-100.png"

   },
   "manifest_version": 2,
   "name": "Read Later!",
   "permissions": ["tabs", "storage","unlimitedStorage"],
   "version": "1.0.1"
}